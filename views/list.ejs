<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<style>
    table {
        margin-top: 20px;
        width: 100%;
        border-top: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
    
    th {
        background: #eee;
    }
    
    td,
    th {
        border: 1px solid #ddd;
        height: 30px;
        border-right: 0;
        border-top: 0;
        border-collapse: collapse;
        padding: 0 10px;
    }
</style>

<body>
    <%- include header %>
        <table cellpadding="0" cellspacing="0">
            <colgroup>
                <col style="width: 15%;text-align: center;">
                </col>
                <col style="width: 25%;text-align: center;">
                </col>
                <col>
                </col>
            </colgroup>
            <tr>
                <th>序号</th>
                <th>标题</th>
                <th>内容</th>
            </tr>
            <% results.forEach(function(item,index){  %>
                <tr>
                    <td>
                        <%= (index+1) %>
                    </td>
                    <td>
                        <%- item.title %>
                    </td>
                    <td>
                        <%- item.content %>
                    </td>
                </tr>
                <% }) %>
                    <tr>
                        <td colspan="3">
                            <a href="./list?page_num=1">首页</a>
                            <a href="./list?page_num=<%= page_num>1?parseInt(page_num,10)-1:1 %>">上一页</a>
                            <a href="./list?page_num=<%= page_num<total_page?parseInt(page_num,10)+1:total_page %>">下一页</a>
                            <a href="./list?page_num=<%=total_page%>">尾页</a>
                            <span><%= page_num %>/<%= total_page %></span>
                            <span>总<%= count%>条记录</span>
                        </td>

                    </tr>
        </table>
</body>

</html>